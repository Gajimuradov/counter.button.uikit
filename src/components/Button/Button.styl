.Button
  display inline-flex
  align-items center
  justify-content center
  font-family roboto
  border none
  outline none
  cursor pointer
  font-family inherit
  font-weight 500
  border-radius 9999px
  position relative
  transition 0.3s ease-out

  // Текст, который обрезается при длинной строке
  .Button__label
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    max-width 100%

  // Иконка загрузки
  .Button__loader
    animation spin 1s linear infinite

  // Анимация вращения (для loader)
  @keyframes spin
    0%
      transform rotate(0deg)
    100%
      transform rotate(360deg)

  // Стили для primary
  &--primary
    background-color #FF7700
    color #ffffff

  // Стили для secondary
  &--secondary
    background-color #f5f5f5
    color #222
    border 1px solid #ccc

  // Состояния
  &--enabled
    &:hover
      opacity 0.9
      transform scale(1.02)

    &:active
      opacity 0.8
      transform scale(0.98)

  &--disabled
    opacity 0.36
    cursor not-allowed

  &--loading
    // Можно добавить стили для анимации

  &--focused
    box-shadow 0 0 0 2px rgba(#0080ff, 0.5)

  // Модификаторы размера
  &--size-28
    // Некоторые дополнительные настройки, 
    // если нужно отличить от inline-style
    // например, min-height, line-height и т.п.

  &--size-36
    // ...

  &--size-56
    // ...

 &__content
    display inline-flex
    align-items center

  &__label
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    max-width 100%

  &__counter
    margin-left 8px